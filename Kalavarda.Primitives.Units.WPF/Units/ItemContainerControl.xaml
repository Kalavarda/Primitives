<UserControl x:Class="Kalavarda.Primitives.Units.WPF.Units.ItemContainerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:units="clr-namespace:Kalavarda.Primitives.Units.WPF.Units">
    <ItemsControl x:Name="_itemsControl" MouseDown="_itemsControl_OnMouseDown" ContextMenuOpening="OnContextMenuOpening">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <units:ContainerItemControl Margin="2"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ContextMenu>
            <ContextMenu ContextMenuOpening="OnContextMenuOpening">
                <MenuItem Header="Test" x:Name="_miEquip"/>
            </ContextMenu>
        </ItemsControl.ContextMenu>
    </ItemsControl>
</UserControl>
