<UserControl x:Class="Kalavarda.Primitives.WPF.Controls.MapTextureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#800000FF">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="_imageBrush" TileMode="Tile" Stretch="None" AlignmentX="Left" AlignmentY="Top" ViewportUnits="Absolute">
                <ImageBrush.Transform>
                    <ScaleTransform x:Name="_scaleTransform" ScaleX="0.1" ScaleY="0.1"/>
                </ImageBrush.Transform>
            </ImageBrush>
        </Grid.Background>
    </Grid>
</UserControl>
