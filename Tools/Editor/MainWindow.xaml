<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu>
            <MenuItem Header="File">
            </MenuItem>

            <MenuItem Header="Scene">
                <MenuItem Header="New..." Click="Scene_New_OnClick"/>
                <MenuItem Header="Open..." Click="Scene_Open_OnClick"/>
            </MenuItem>

            <MenuItem Header="VisualObject">
                <MenuItem Header="New..." Click="VisualObject_New_OnClick"/>
                <MenuItem Header="Open..." Click="VisualObject_Open_OnClick"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
